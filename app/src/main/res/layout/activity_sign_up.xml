<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:hint="Name"
        android:background="@drawable/edt_background_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_name"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:hint="Email"
        android:background="@drawable/edt_background_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/pass_validate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/edt_email"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/atoz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a-z"
            android:textColor="#D0D0D0"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/AtoZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-z"
            android:paddingLeft="15dp"
            android:textColor="#D0D0D0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-9"
            android:paddingLeft="15dp"
            android:textColor="#D0D0D0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/charcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="length 8"
            android:textColor="#D0D0D0"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/passTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ”"
            android:textColor="#D0D0D0"
            android:background="@drawable/message_box_bg"
            android:layout_marginLeft="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20dp" />

    </LinearLayout>


    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pass_validate_layout"
        android:paddingLeft="12dp"
        android:hint="Password"
        android:background="@drawable/edt_background_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/edt_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edt_background_blue"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Login"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_background"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Sign Up"/>



    </LinearLayout>


</RelativeLayout>